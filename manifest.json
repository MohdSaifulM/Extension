{
  "name": "Tracker",
  "description": "Simple task tracker with motivational quote",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["build/static/js/main.js"],
      "matches": ["<all_urls>"]
    }
  ]
}