{
  "name": "WorkWise",
  "description": "Stay motivated and organized. Get time, quotes, and a task manager. Add, update, or delete messages anytime.",
  "version": "0.0.2",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "icons": {
    "16": "p16.png",
    "32": "p32.png",
    "128": "p128.png"
  }
}